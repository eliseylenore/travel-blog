@{
    ViewData["Title"] = "Travel Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model TravelBlog.Models.Place


<h2>Details</h2>
<hr />
<h4>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h4>


@foreach (var experience in Model.Experiences)
{
    <h4>@Html.ActionLink(@experience.Name, "Details", "Experiences", new { id = experience.ExperienceId })</h4>
}
<p>@Html.ActionLink("Back to list", "Index")</p>
